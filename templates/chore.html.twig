<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1">
    <title>{% block title %}Elemele{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <style>
            * {
                box-sizing: border-box;
            }
            html,body{
                margin: 0;
                background-color: #0f0f0f;
                color: #ffffff;
                font-family: Arial, sans-serif;
            }
            main {
                width: 100vw;
                height: 100%;
                top: 0;
                position: absolute;
            }
            section {
                width: 100%;
            }
            h1 {
                color: #ffffff;
                font-family: Impact, sans-serif;
                text-align: center;
                font-size: 30px;
                margin-top: 35px;
                margin-bottom: 25px;
            }
            h2{
                text-align: center;
                font-size: 20px;
            }
            h3{
                text-align: center;
                font-size: 18px;
            }
            a {
                color: #ffffff;
                text-decoration: none;
                text-align: center;
                font-size: 48px;
            }
            .history-wrap {
                display: flex;
                flex-wrap: wrap;
                align-content: start;
                justify-content: flex-start;
            }
            label {
                color: #fff;
                display: block;
                width: 100%;
                text-align: center;
                font-size: 18px;
            }
            section span {
                width: 100%;
                border: none;
                display: block;
                text-align: center;
                font-size: 18px;
            }
            .end-button {
                background-color: #273927;
                width: 100%;
                margin-top: 25px;
                height: 75px;
                margin-bottom: 25px;
                font-size: 18px;
                color: #fff;
                border: none;
            }

            @keyframes rainbow {
                0% {
                    color: #ff9999
                }
                10% {
                    color: #99ff99
                }
                20% {
                    color: #9999ff
                }
                30% {
                    color: #ff9999
                }
                40% {
                    color: #fff
                }
                100% {
                    color: #fff
                }
            }

            h3 > div {
                display: flex;
                align-items: center;
                flex-wrap: wrap;
                justify-content: center;
            }

            h3 > div > span {
                display: block;
                width: 100%;
            }

            h3 > div > span:nth-child(1) {
                animation: rainbow 2s 0.1s infinite linear;
            }

            h3 > div > span:nth-child(2) {
                animation: rainbow 2s 0.4s infinite linear;
            }

            h3 > div > span:nth-child(3) {
                animation: rainbow 2s 0.6s infinite linear;
            }
            .back-button{
                position: absolute;
                top: 0;
                left: 20px;
                font-size: 30px;
                margin-top: 35px;
            }

            .flash-notice{
                position: absolute;
                color: #ff9999;
                font-size: 25px;
                text-align: center;
                width: 100%;
                height: 100%;
                padding-top: 50%;
                background-color: #0a0a0a99;
            }

            section input, select {
                width: 50%;
                border: none;
                height: 30px;
                font-size: 25px;
                float: left;
                text-align: center;
            }

            form {
                width: 100%;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

        <script>
            function showHistory(buttonElem) {
                let elem = document.querySelector('#history');

                if (elem.style.display === 'flex') {
                    elem.style.display = 'none';
                    buttonElem.querySelector('div').style.display = 'flex';
                } else {
                    elem.style.display = 'flex';
                    buttonElem.querySelector('div').style.display = 'none';
                }
            }
        </script>
        <script>
            function hide(elem) {
                elem.style.display = 'none';
            }
        </script>
    {% endblock %}
</head>
<body>
{% block body %}
    <main>
        {% for message in app.flashes('error') %}
            <div class="flash-notice" onclick="hide(this)">
                {{ message }}
            </div>
        {% endfor %}
        <a href="/houses/{{ house.id }}/rooms/{{ room.id }}">
            <div class="back-button"><</div>
        </a>
        <a href="/"><h1>ElemeleApp</h1></a>
        <h2>{{ room.name }}</h2>
        <h3>{{ chore.name }}</h3>
        <section>
            <span>{{ chore.responsible_user }}</span>
            <span>Interwał: {{ chore.interval }}dni</span>
        </section>
        <section>
            <span>Aktualny termin</span>
            <span>{{ chore.current_fulfilment.deadline }}</span>
            {% if chore.responsible_user_id == user.id %}
                <form method="post"
                      action="/api/houses/{{ house.id }}/rooms/{{ room.id }}/chores/{{ chore.id }}/fulfilments/{{ chore.current_fulfilment.id }}.form">
                    <input name="finished" value="1" type="number" style="display: none">
                    <input type="text" name="redirect_address"
                           value="/houses/{{ house.id }}/rooms/{{ room.id }}/chores/{{ chore.id }}"
                           style="display: none">
                    <input class='end-button' type="submit" value="Potwierdź wykonanie">
                </form>
            {% endif %}
        </section>
        <h3 onclick="showHistory(this)" class="history-title">Historia
            <div>
                <span>▼</span>
                <span>▼</span>
                <span>▼</span>
            </div>
        </h3>
        <section class="history-wrap" id="history" style="display: none">
            {% for fulfilment in chore.fulfilments %}
                {% if fulfilment %}
                <span>{{ fulfilment.deadline }}{% if fulfilment.rate != 0 %} : {{ fulfilment.rate }}/5{% endif %}</span>
                {% if  chore.responsible_user_id != user.id %}
                    {% if fulfilment.rate == 0 %}
                        <form method="post"
                              action="/api/houses/{{ house.id }}/rooms/{{ room.id }}/chores/{{ chore.id }}/fulfilments/{{ fulfilment.id }}/rate.form">
                            <select name="rate">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                                <option value=5>5</option>
                            </select>
                            <input type="submit" value="Oceń" class="submit-button">
                            <input type="text" name="redirect_address"
                                   value="/houses/{{ house.id }}/rooms/{{ room.id }}/chores/{{ chore.id }}"
                                   style="display: none">
                        </form>
                    {% endif %}
                    {% endif %}
                {% endif %}
            {% endfor %}
        </section>
    </main>
{% endblock %}
</body>
</html>
